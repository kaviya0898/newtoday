int n=5;
		for(int i=0;i<n;i++)
		{
			for(int j=i;j<n-1;j++)
			{
				System.out.print("  ");
				continue;
			}
			for(int k=0;k<=i;k++)
			{
				System.out.print(i-k+" ");
			}
			for(int l=1;l<=i;l++)
			{
				System.out.print(l%(2+i)+" ");
			}
			System.out.println();
		}
    
    
    output:
        0 
      1 0 1 
    2 1 0 1 2 
  3 2 1 0 1 2 3 
4 3 2 1 0 1 2 3 4 
